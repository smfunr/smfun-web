# ===== Core =====
CLOB_BASE_URL=https://clob.polymarket.com
POLY_CHAIN_ID=137
POLY_PRIVATE_KEY=0xYOUR_PRIVATE_KEY
POLY_SIGNATURE_TYPE=1
# If using proxy wallet/signer mode, set funder address:
POLY_FUNDER=

# ===== Strategy =====
STARTING_CAPITAL_USDC=500
MAX_ORDER_SIZE_USDC=50
ENTRY_PRICE_THRESHOLD=0.30
TAKE_PROFIT_PCT=0.20
ENTRY_WINDOW_MINUTES=20
POLL_INTERVAL_MS=5000

# ===== Auto Discovery =====
DISCOVERY_SCAN_PAGES=8
MARKET_FILTER_REGEX=(?i)\b(bitcoin|btc)\b
HOURLY_HINT_REGEX=(?i)(hour|1h|60m|up.?down|up/down)
UP_OUTCOME_REGEX=(?i)^(up|yes)$
DOWN_OUTCOME_REGEX=(?i)^(down|no)$

# ===== Monitoring =====
LOG_DIR=./logs
LOG_FILE=auto_bot.log
STATUS_FILE=status.json
LOG_MAX_BYTES=5242880
LOG_BACKUPS=5

# ===== Execution =====
# 先 true 跑纸面，确认稳定后改 false
DRY_RUN=true
